<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC" />


        <LinearLayout
            android:id="@+id/start_date_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/layout_selector"
            android:clickable="true"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:text="开始日期："/>

            <EditText
                android:id="@+id/repair_record_start_date"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:focusableInTouchMode="false"
                android:singleLine="true"
                android:background="@null"
                android:textSize="14sp"

                />
        </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC" />


        <LinearLayout
            android:id="@+id/end_date_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/layout_selector"
            android:clickable="true"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:text="结束日期："/>
            <EditText
                android:id="@+id/repair_record_end_date"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:focusableInTouchMode="false"
                android:singleLine="true"
                android:background="@null"
                android:textSize="14sp"
                />
        </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/repair_record_submit_passwd_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_repair_record"></ListView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>