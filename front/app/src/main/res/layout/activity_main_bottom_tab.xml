<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC" />

    <LinearLayout
        android:id="@+id/id_switch_tab_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:baselineAligned="false"
        >

        <LinearLayout
            android:id="@+id/id_tab_record_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/guide_round_selector"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp"
            android:saveEnabled="false" >

            <com.beardedhen.androidbootstrap.FontAwesomeText
                android:id="@+id/id_record_fat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fontawesometext:fa_icon="fa-table"
                android:layout_margin="1dp"
                android:textSize="32sp"
                android:textColor="#33B5E5"
                />

            <TextView
                android:id="@+id/id_record_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="抄表"
                android:textColor="#33B5E5"
                android:textSize="15dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_tab_repair_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/guide_round_selector"
            android:focusable="false"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp" >

            <com.beardedhen.androidbootstrap.FontAwesomeText
                android:id="@+id/id_repair_fat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fontawesometext:fa_icon="fa-asterisk"
                android:layout_margin="1dp"
                android:textSize="32sp"
                android:textColor="#D3D3D3"
                />

            <TextView
                android:id="@+id/id_repair_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="报修"
                android:textColor="#D3D3D3"
                android:textSize="15dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_tab_apps_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/guide_round_selector"
            android:focusable="false"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp" >

            <com.beardedhen.androidbootstrap.FontAwesomeText
                android:id="@+id/id_apps_fat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fontawesometext:fa_icon="fa-th-large"
                android:layout_margin="1dp"
                android:textSize="32sp"
                android:textColor="#D3D3D3"
                />

            <TextView
                android:id="@+id/id_apps_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="应用"
                android:textColor="#D3D3D3"
                android:textSize="15dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_tab_mine_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/guide_round_selector"
            android:focusable="false"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp" >

            <com.beardedhen.androidbootstrap.FontAwesomeText
                android:id="@+id/id_mine_fat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fontawesometext:fa_icon="fa-user"
                android:layout_margin="1dp"
                android:textSize="32sp"
                android:textColor="#D3D3D3"
                />

            <TextView
                android:id="@+id/id_mine_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="我"
                android:textColor="#D3D3D3"
                android:textSize="15dip" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/id_tab_line_iv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:contentDescription="tab"
        android:background="@drawable/tab_selected_pressed_holo" >
    </ImageView>
</LinearLayout>