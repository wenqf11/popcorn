<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC" />


    <LinearLayout
        android:id="@+id/id_switch_tab_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:baselineAligned="false"
        >


        <LinearLayout
            android:id="@+id/id_tab_apps_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/guide_round_selector"
            android:focusable="false"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="2dp" >

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <com.beardedhen.androidbootstrap.FontAwesomeText
                    android:id="@+id/id_apps_fat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    fontawesometext:fa_icon="fa-th-large"
                    android:textSize="32sp"
                    android:textColor="@color/light_blue"
                    />
                <FrameLayout
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/tips_circle"
                        android:gravity="center"
                        android:text="8"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />
                </FrameLayout>
            </FrameLayout>


            <TextView
                android:id="@+id/id_apps_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="应用"
                android:textColor="@color/light_blue"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_tab_record_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/guide_round_selector"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="2dp"
            android:saveEnabled="false" >

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <com.beardedhen.androidbootstrap.FontAwesomeText
                    android:id="@+id/id_record_fat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    fontawesometext:fa_icon="fa-table"
                    android:textSize="32sp"
                    android:textColor="#D3D3D3"
                    />
                <FrameLayout
                    android:id="@+id/main_bottom_tab_meter_fl_id"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:id="@+id/main_bottom_tab_meter_id"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/tips_circle"
                        android:gravity="center"
                        android:text="3"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />
                </FrameLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/id_record_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="抄表"
                android:textColor="#D3D3D3"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_tab_repair_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/guide_round_selector"
            android:focusable="false"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="2dp" >

            <com.beardedhen.androidbootstrap.FontAwesomeText
                android:id="@+id/id_repair_fat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                fontawesometext:fa_icon="fa-asterisk"
                android:textSize="32sp"
                android:textColor="#D3D3D3"
                />

            <TextView
                android:id="@+id/id_repair_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="报修"
                android:textColor="#D3D3D3"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_tab_mine_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/guide_round_selector"
            android:focusable="false"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="2dp" >

            <com.beardedhen.androidbootstrap.FontAwesomeText
                android:id="@+id/id_mine_fat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                fontawesometext:fa_icon="fa-user"
                android:textSize="32sp"
                android:textColor="#D3D3D3"
                />

            <TextView
                android:id="@+id/id_mine_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="我"
                android:textColor="#D3D3D3"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/id_tab_line_iv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/tabDescription"
        android:background="@drawable/tab_selected_pressed_holo" >
    </ImageView>
</LinearLayout>